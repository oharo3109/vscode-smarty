{
    "name": "html-smarty",
    "displayName": "Html-Smarty",
    "license": "GPL",
    "description": "HTML + Smarty",
    "version": "1.0.0",
    "publisher": "oharo",
    "engines": {
        "vscode": "^0.10.x"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "smarty",
        "php",
        "syntax",
        "snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "html",
                "aliases": ["html"],
                "extensions": [".html", ".tpl"],
                "configuration": "./smarty.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "html",
                "scopeName": "text.html.smarty",
                "path": "./syntaxes/smarty.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/snippets.json"
            }
        ]
    }
}